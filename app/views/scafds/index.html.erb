<p id="notice"><%= notice %></p>

<h1>Scafds</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scafds.each do |scafd| %>
      <tr>
        <td><%= scafd.user_name %></td>
        <td><%= image_tag(scafd.image.url, class: "indexing") %></td>
        <td><%= link_to 'Show', scafd %></td>
        <td><%= link_to 'Edit', edit_scafd_path(scafd) %></td>
        <td><%= link_to 'Destroy', scafd, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

